<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>Calcolatrice</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
        <servlet-name>Hello</servlet-name>
        <servlet-class>it.objectmethod.tutorial.calcolatrice.DemoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Addition</servlet-name>
        <servlet-class>it.objectmethod.tutorial.calcolatrice.Addition</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Subtraction</servlet-name>
        <servlet-class>it.objectmethod.tutorial.calcolatrice.Subtraction</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Moltiplication</servlet-name>
        <servlet-class>it.objectmethod.tutorial.calcolatrice.Moltiplication</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Division</servlet-name>
        <servlet-class>it.objectmethod.tutorial.calcolatrice.Division</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>Hello</servlet-name>
        <url-pattern>/DemoServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Addition</servlet-name>
        <url-pattern>/Addition</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Subtraction</servlet-name>
        <url-pattern>/Subtraction</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Moltiplication</servlet-name>
        <url-pattern>/Moltiplication</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Division</servlet-name>
        <url-pattern>/Division</url-pattern>
    </servlet-mapping>
    
</web-app>